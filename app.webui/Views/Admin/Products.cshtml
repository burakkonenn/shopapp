@model ProductModel
@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")

<div class="row d-flex justify-content-center createColumn">
    <div class="col-md-9" style="background-color: white;">
        <h2 class="mt-4 mb-2 text-center">Ürünler Listesi</h2>
        <a asp-controller="Admin" asp-action="CreateProduct" style="color: gray;">
            <h5 class="mt-3" style="font-size: 16px;">Yeni ürün ekle +</h5>
        </a>
        <a asp-controller="Admin" asp-action="Panel" style="color: black;text-decoration: none;">
                     <h5 class="mt-3" style="font-size: 14px;">< Admin Panel</h5>
        </a>
        <hr>
        <table class="table table-hover table table-striped table table-bordered">
            <thead class="bg-dark text-dark">
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Image</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td><img src="~/img/@item.Image" width="80" alt=""></td>
                        <td>
                                    <a href="/admin/products/@item.Id" class="btn btn-info ms-1 float-end">Düzenle</a>
                                    
                                    <form action="/admin/deleteproduct" method="POST" style="display: inline;">
                                        <input type="hidden" name="productId" value="@item.Id">
                                        <button type="submit" class="btn btn-secondary float-end">Sil</button>
                                    </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>