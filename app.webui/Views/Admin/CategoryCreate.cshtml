@model ModelCategory

@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")

<div class="row d-flex justify-content-center createColumn">
    <div class="col-md-6" style="background-color: white;">
        <h2 class="text-center mt-1">Yeni Kategori Ekle</h2>
        <a asp-controller="Admin" asp-action="Categories" class="float-left" style="text-decoration: none;color:black;" ><h2 class="text-center mt-1" style="font-size: 15px;">< Kategori Sayfasına Geri Dön</h2></a>
        <a asp-controller="Admin" asp-action="Panel" class="text-center" style="color: black;text-decoration: none;">
                <h5 class="mt-3" style="font-size: 14px;">< Admin Panel</h5>
        </a>
        <form asp-controller="Admin" asp-action="CategoryCreate" method="POST">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control">
                <span asp-validation-for="Url"></span>
            </div>
            <button class="btn btn-warning" type="submit">Kaydet</button>
        </form>
    </div>
</div>