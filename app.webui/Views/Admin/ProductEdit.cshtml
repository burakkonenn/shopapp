@model ProductEdit

<form asp-controller="Admin" asp-action="ProductEdit" method="POST">

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <input type="hidden" name="productId" value="@Model.ProductId">
            <label asp-for="Name" class="form-label c"></label>
            <input asp-for="Name" class="form-control c">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="form-label c"></label>
            <input asp-for="Price" class="form-control c">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="Url" class="form-label c"></label>
            <input asp-for="Url" class="form-control c">
            <span asp-validation-for="Url"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="form-label c"></label>
            <input asp-for="Image" class="form-control c">
            <span asp-validation-for="Image"></span>
        </div>
        <button class="btn btn-outline-success mt-3" type="submit">Save Changes</button>
    </div>
    <div class="col-md-6 ">
         @for (int i = 0; i < Model.SelectedCategories.Count; i++)
            {
                <input type="hidden" name="SelectedCategories[@i].CategoryId" value="@Model.SelectedCategories[@i].Id">
                <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[@i].Name">
            }
       <div class="row ">
            <h3 class="c d-flex justify-content-end">Products Brand</h3>
       </div>
       <hr>
       <div class="row  mt-3">
           @foreach (var item in (List<MansCategory>)ViewBag.Categories)
           {
               <div class="form-check d-flex justify-content-end">
                    <input class="form-check-input" type="checkbox" 
                    value="@item.Id"
                    name="categoryIds"
                    id="category_@(item.Id)" 
                    @(Model.SelectedCategories.Any(p => p.Id == item.Id)?"checked":"")>
                    <label class="form-check-label c" for="flexCheckDefault">
                        @item.Name
                    </label>
                </div>
           }
       </div>
    </div>
</div>

 </form>
