@model CreateProduct

@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")


<div class="row d-flex justify-content-center createColumn">
    <div class="col-md-9 createProductsPage d-flex justify-content-center">
            <form asp-controller="Admin" asp-action="CreateProduct" method="POST" class="mt-3" style="width: 500px;">
                <h2 class="text-center mt-1">Yeni Ürün Ekle</h2>
                <a asp-controller="Admin" asp-action="Products" class="float-left" style="text-decoration: none;color:black;" ><h2 class="text-center mt-1" style="font-size: 15px;">< Ürünler Sayfasına Geri Dön</h2></a>
                <a asp-controller="Admin" asp-action="Panel" class="text-center" style="color: black;text-decoration: none;">
                     <h5 class="mt-3" style="font-size: 14px;">< Admin Panel</h5>
                </a>
                <hr>
                            <div class="mb-3 row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Ürün Adı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Price" class="col-sm-2 col-form-label">Ürün Fiyatı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" class="form-control" >
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Image" class="col-sm-2 col-form-label">Ürün Fotoğrafı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Image" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Category" class="col-sm-2 col-form-label">Ürün Kategorisi</label>
                                <div class="col-sm-10">
                                    <input asp-for="Category" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Brands" class="col-sm-2 col-form-label">Ürün Markası</label>
                                <div class="col-sm-10">
                                    <input asp-for="Brands" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Gender" class="col-sm-2 col-form-label">Cinsiyet</label>
                                <div class="col-sm-10">
                                    <input asp-for="Gender" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Url" class="col-sm-2 col-form-label">Url</label>
                                <div class="col-sm-10">
                                    <input asp-for="Url" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Ürün Açıklaması</label>
                                <div class="col-sm-10">
                                    <input asp-for="Description" class="form-control">
                                </div>
                            </div>
                               
                                <button class="btn btn-warning mt-3" type="submit">Gönder</button>
                            </form>
    </div>  
</div>

