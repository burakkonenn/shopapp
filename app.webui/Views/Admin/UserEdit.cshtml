@model UserModel
<h2>User Edit</h2>


<div class="row">
 <div class="col-md-6">
        <form asp-controller="Admin" asp-action="UserEdit" method="POST">
            <div class="form-group">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="form-label"></label>
                <input asp-for="Firstname" class="form-control">
                <span asp-validation-for="Firstname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="form-label"></label>
                <input asp-for="Lastname" class="form-control">
                <span asp-validation-for="Lastname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>
            <button class="btn btn-outline-success mt-3" type="submit">Save Changes</button>
        </form>
    </div>
    <div class="col-md-3">
        @foreach (var rolename in ViewBag.roles)
        {
            <input type="checkbox" name="selectedRoles" value="@rolename" id="@rolename"
            @(Model.SelectedRoles.Any(i => i == rolename)?"checked":"")>
            <label for="@rolename">@rolename</label>
        }
    </div>
</div>