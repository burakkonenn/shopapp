@model Cat

@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")

<div class="container-fluid">
    <div class="row d-flex justify-content-center createColumn">
        <div class="col-md-9" style="background-color:white">
            <h2 class="mt-4 mb-2 text-center">Kategoriler Listesi</h2>
            <a asp-controller="Admin" asp-action="CategoryCreate" style="color: gray;">
                <h5 class="mt-3" style="font-size: 16px;">Yeni kategori ekle +</h5>
            </a>
            <a asp-controller="Admin" asp-action="Panel"  style="color: black;text-decoration: none;">
                     <h5 class="mt-3" style="font-size: 14px;">< Admin Panel</h5>
            </a>
            <hr>
            
            <table class="table table-bordered table-sm table table-hover">
                <thead class="bg-dark text-white">
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/categories/@item.Id" class="btn btn-info float-end">DÃ¼zenle</a>
                                <form asp-controller="Admin" asp-action="deletecategory">
                                    <input type="hidden" name="categoryId" value="@item.Id">
                                    <button class="btn btn-secondary float-end me-1">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>