@model Login
@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")
<div class="row d-flex justify-content-center loginback p-4 mb-4">
    <div class="col-md-2 logincolumn border d-flex justify-content-center" style="background-color: white;">
        <form asp-controller="Account" asp-action="Login" method="POST" class="forms">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
            <div asp-validation-summary="All" class="text-danger"></div>      
            <div class="mb-3 mt-5">
                <h5 style="font-size: 13px;">E-Posta</h5>
                    <input class="form-control loginİnput" asp-for="Eposta">
                    <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>   
            <div class="mb-3">
                <h5 style="font-size: 13px;">Şifre</h5>
                    <input class="form-control loginİnput" asp-for="Sifre">
                    <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>       
            <div class="d-flex justify-content-end mb-3">
                    <a href="/account/forgotpassword" class="btn btn-link" style="color:black;">Şifremi Unuttum</a>
            </div>
            <div class="mb-3 d-grid gap-2">
                    <button type="submit" class="btn btn-warning">Giriş Yap</button>
            </div>
           <div class="d-flex flex-row d-flex justify-content-center">
                <a href="" class="btn btn-link " style="text-decoration: none;color:black;"><i class="fab fa-facebook" style="font-size: 40px;color:blue;"></i>
                <h5 style="font-size: 15px;">Facebook</h5><p style="font-size: 12px;">ile giriş yap</p>
                </a>
                <a href="" class="btn btn-link " style="text-decoration: none;color:black"><i class="fab fa-google" style="color: red; font-size:40px;color:red"></i>
                <h5 style="font-size: 15px;">Google</h5><p style="font-size: 12px;">ile giriş yap</p>
                </a>
           </div>
         </form>
    </div>
</div>


@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}