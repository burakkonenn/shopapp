@model ManProduct

<div class="card productStyle mb-3">
     <a href="">
            <img src="~/img/@Model.Image" alt="" style="height: 400px;" class="card-img-top">
    </a>
    <div class="card-body text-center">
        <h3 class="card-title">@Model.Name</h3>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.Price
        </small>
       <div class="mt-2 d-grid gap-2">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">Detaylar</a>
       </div>
    </div>
</div>

