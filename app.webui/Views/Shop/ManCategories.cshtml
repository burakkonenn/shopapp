@model List<ManProduct>
@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")
<div class="row">
    <div class="col-md-2 p-3 mt-4 border columnList">
            <h5 class="">İlgili Kategoriler</h5>
            <hr>
            <h5>Fırsat Ürünleri</h5>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="" style="width: 20px;" height="50px;">
                <label class="form-check-label ms-2 k" for="">
                    Fırsat Ürünleri
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="" style="width: 20px;" height="50px;">
                <label class="form-check-label ms-2 k" for="flexCheckCheckedDisabled">
                    Büyük Fırsat Ürünleri
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="" style="width: 20px;" height="50px;">
                <label class="form-check-label ms-2 k" for="">
                    Çılgın Fırsat Ürünleri
                </label>
            </div>
            <hr>
            <h5 class="mb-3">Markalar</h5>
            <form action="" method="POST">
                <input id="formin" type="text" class="form-control" style="width: 240px;"  placeholder="Marka ara">
            </form>
            <div class="mt-3">
                @foreach (var item in (List<MansBrands>) ViewBag.Brands)
                {
                    <div class="form-check d-flex flex-row">
                        <input class="form-check-input mt-2" type="checkbox" value="" id="" style="width: 20px;" height="50px;">
                        <a asp-controller="Shop" asp-action="ManBrandDetails" asp-route-url="@item.Url" class="nav-link k" style="color:black;">@item.Name</a>
                    </div>
                }
            </div>
    </div>
    <div class="col-md-10">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                     <div class="card text-center mb-3 productStyle">
                        <img src="~/img/@item.Image" class="card-img-top" style="height: 400px;" alt="">
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <small class="text-muted">
                                <i class="fas fa-lira-sign"></i>@item.Price
                            </small>
                           <div class="d-grid gap-2 mt-3">
                                <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detaylar</a>
                           </div>
                        </div>
                    </div>
                </div>
            }
         </div>
    </div>
</div>