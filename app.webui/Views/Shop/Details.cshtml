@await Html.PartialAsync("_header")
@await Html.PartialAsync("_navbar")
@await Html.PartialAsync("_headerTwo")
<div class="row mb-5 d-flex justify-content-center">
                <div class="col-md-5 border detailsShadow" style="height:650px;">
                    <img src="~/img/@Model.Product.Image" style="height:650px; width:100%" alt="">
                </div>
                <div class="col-md-6 border detailsShadow">
