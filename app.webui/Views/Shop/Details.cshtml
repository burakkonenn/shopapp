<div class="row mt-3 mb-5 d-flex justify-content-center">
    <div class="col-md-11">
        <h2 class="mb-4">Ürün Değerlendirmesi</h2>
        <form action="/shop/comment" method="post" class="border p-4 formStyle">
            <input type="hidden" name="ProductId" class="form-control" value="@Model.Product.Id">
            <input type="hidden" name="Date" class="form-control" value="@DateTime.Now">
            <div class="mb-4">
                <input type="text" class="form-control mb-2" placeholder="Adınız" name="Name">
            </div>
             <div class="mb-4">
                <input type="email" class="form-control mb-2" placeholder="Email Adresiniz" name="Email">
            </div>
            <div class="mb-3">
                <textarea name="Post" id="" placeholder="Yorumunuz" class="form-control" cols="30" rows="10"></textarea>
            </div>
            <button class="btn btn-warning mt-3" type="submit">Gönder</button>
        </form>

    </div>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-md-11">
        <div class="d-flex justify-content-center mt-2 mb-2">
            <h2 class="text-muted">@Model.totalCommentCount Yorum</h2>
        </div>
        @foreach (var item in Model.Comments)
        {
           <div class="card mb-2">
               <div class="card-body">
                    <p class="card-text">@item.Post</p>
               </div>
               <div class="card-footer border-0" style="background-color: white;">
                  <div>
                     <span class="text-muted">@item.Name</span> |
                     <span class="text-muted">@item.Date</span>
                     <div class="float-end like">
                       <a href="/shop/like/@item.Id" class="like" style="text-decoration:none;"><i class="fas fa-thumbs-up me-2"></i>Yorumu Beğen (@item.Like)</a>
                   </div>
                  </div>
               </div>
           </div>
        }
    </div>
</div>

